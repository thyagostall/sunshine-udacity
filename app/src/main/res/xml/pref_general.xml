<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_default_value_location"
        android:key="@string/pref_key_location"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_location" />

    <ListPreference
        android:key="unit"
        android:title="Unit"
        android:entries="@array/pref_unit_labels"
        android:entryValues="@array/pref_unit_values"
        android:defaultValue="@string/pref_value_metric"/>

</PreferenceScreen>
